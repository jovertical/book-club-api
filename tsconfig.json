{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["ES2022"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}
